<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uoc.easyorderfront">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".data.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/logo_easy_order"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_easy_order"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyOrderFront">
        <activity android:name=".ui.main.MainWorkerMenuActivity"></activity>
        <activity android:name=".ui.main.MainClientMenuActivity" />
        <activity android:name=".ui.order.GetQrCodeActivity" />
        <activity android:name=".ui.order.OrderWorkerFragment" />
        <activity android:name=".ui.table.TableListFragment" />
        <activity android:name=".ui.restaurant.RestaurantProfileFragment" />
        <activity android:name=".ui.table.OcupyTableFragment" />
        <activity android:name=".ui.profile.ClientProfileFragment" />
        <activity android:name=".ui.profile.WorkerProfileFragment" />
        <activity android:name=".ui.restaurant.CreateRestaurantFragment" />
        <activity android:name=".ui.main.MainWorkerActivity" />
        <activity
            android:name=".ui.recovery.PasswordRecoveryActivity"
            android:label="@string/title_activity_recovery" />
        <activity android:name=".ui.main.MainClientActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>